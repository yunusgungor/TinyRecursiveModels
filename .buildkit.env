# BuildKit Environment Configuration
# Source this file to enable BuildKit features in your shell
# Usage: source .buildkit.env

# Enable BuildKit for docker build
export DOCKER_BUILDKIT=1

# Enable BuildKit for docker-compose
export COMPOSE_DOCKER_CLI_BUILD=1

# BuildKit progress output (auto, plain, tty)
export BUILDKIT_PROGRESS=auto

# Enable colored output
export BUILDKIT_COLORS=1

# BuildKit host (optional, for remote BuildKit)
# export BUILDKIT_HOST=tcp://0.0.0.0:1234

# Registry for cache (update with your registry)
export REGISTRY=${REGISTRY:-ghcr.io/yourusername}

# BuildKit inline cache
export BUILDKIT_INLINE_CACHE=1

# Docker CLI experimental features
export DOCKER_CLI_EXPERIMENTAL=enabled

echo "âœ“ BuildKit environment variables configured"
echo "  DOCKER_BUILDKIT=1"
echo "  COMPOSE_DOCKER_CLI_BUILD=1"
echo "  BUILDKIT_PROGRESS=$BUILDKIT_PROGRESS"
