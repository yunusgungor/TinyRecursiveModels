# Backend Environment Variables
# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trendyol_gift_db
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=50

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Trendyol API Settings
TRENDYOL_API_KEY=your_trendyol_api_key_here
TRENDYOL_API_BASE_URL=https://api.trendyol.com
TRENDYOL_RATE_LIMIT=100

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_ENABLED=true
SESSION_TIMEOUT_MINUTES=30

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Model Settings
MODEL_CHECKPOINT_PATH=../checkpoints/integrated_enhanced/integrated_enhanced_best.pt
MODEL_DEVICE=cpu
MODEL_INFERENCE_TIMEOUT=5

# Reasoning Configuration
REASONING_ENABLED=true
REASONING_DEFAULT_LEVEL=basic
REASONING_MAX_THINKING_STEPS=20
REASONING_TIMEOUT_SECONDS=2.0
REASONING_MAX_TRACE_SIZE=10000

# Cache Settings
CACHE_TTL_RECOMMENDATIONS=3600
CACHE_TTL_TRENDYOL_DATA=1800
CACHE_MAX_SIZE_MB=500

# Email Alert Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=admin@example.com
ALERT_EMAIL_FROM=your-email@gmail.com
ENABLE_EMAIL_ALERTS=false

# Monitoring and Tracing Settings
ENABLE_TRACING=true
JAEGER_HOST=jaeger
JAEGER_PORT=6831

# API Settings
API_V1_PREFIX=/api
PROJECT_NAME=Trendyol Gift Recommendation API
VERSION=0.1.0
DEBUG=false
