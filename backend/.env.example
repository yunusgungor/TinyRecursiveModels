# Backend Environment Variables
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trendyol_gift
REDIS_URL=redis://:redis@localhost:6379/0

TRENDYOL_API_KEY=your_trendyol_api_key_here
TRENDYOL_API_SECRET=your_trendyol_api_secret_here
TRENDYOL_API_BASE_URL=https://api.trendyol.com

SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

ENVIRONMENT=development
LOG_LEVEL=DEBUG

MODEL_CHECKPOINT_PATH=../checkpoints/integrated_enhanced/integrated_enhanced_best.pt

# Reasoning Configuration
REASONING_ENABLED=true
REASONING_DEFAULT_LEVEL=basic
REASONING_MAX_THINKING_STEPS=20
REASONING_TIMEOUT_SECONDS=2.0
REASONING_MAX_TRACE_SIZE=10000

CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

RATE_LIMIT_PER_MINUTE=10
TRENDYOL_RATE_LIMIT_PER_MINUTE=100

TOOL_TIMEOUT_SECONDS=3
MODEL_INFERENCE_TIMEOUT_SECONDS=5

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@example.com
