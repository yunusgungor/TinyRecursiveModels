# Database Configuration
POSTGRES_DB=trendyol_gift
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_PASSWORD=redis

# Trendyol API Configuration
TRENDYOL_API_KEY=your_trendyol_api_key_here
TRENDYOL_API_SECRET=your_trendyol_api_secret_here
TRENDYOL_API_BASE_URL=https://api.trendyol.com

# Backend Configuration
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ENVIRONMENT=development
LOG_LEVEL=DEBUG
MODEL_CHECKPOINT_PATH=./checkpoints/integrated_enhanced/integrated_enhanced_best.pt

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
TRENDYOL_RATE_LIMIT_PER_MINUTE=100

# Tool Configuration
TOOL_TIMEOUT_SECONDS=3
MODEL_INFERENCE_TIMEOUT_SECONDS=5

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@example.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
